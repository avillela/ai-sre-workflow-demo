GOOSE_PROVIDER: github_copilot
GOOSE_MODEL: gpt-4o
GOOSE_MODE: approve
extensions:
  dynatrace:
    args:
    - -y
    - '@dynatrace-oss/dynatrace-mcp-server@v0.3.0'
    available_tools: []
    bundled: null
    cmd: npx
    description: null
    enabled: true
    env_keys: []
    envs:
      DT_API_TOKEN: <dt_api_token>
      DT_ENVIRONMENT: <dt_environment>
      OAUTH_CLIENT_ID: <dt_oauth_client_id>
      OAUTH_CLIENT_SECRET: <dt_oauth_client_secret>
    name: Dynatrace MCP
    timeout: 300
    type: stdio
  filesystem:
    args:
    - -y
    - '@modelcontextprotocol/server-filesystem'
    - .
    available_tools: []
    bundled: null
    cmd: npx
    description: null
    enabled: false
    env_keys: []
    envs: {}
    name: filesystem
    timeout: 300
    type: stdio
  github:
    args:
    - run
    - -i
    - --rm
    - -e
    - GITHUB_PERSONAL_ACCESS_TOKEN
    - ghcr.io/github/github-mcp-server
    available_tools: []
    bundled: null
    cmd: docker
    description: null
    enabled: true
    env_keys: []
    envs:
      GITHUB_PERSONAL_ACCESS_TOKEN: <gh_access_token>
    name: github
    timeout: 300
    type: stdio
  cli-exec:
    args:
    - cli-mcp-server
    available_tools: []
    bundled: null
    cmd: uvx
    description: null
    enabled: true
    env_keys: []
    envs:
      ALLOWED_DIR: .
      ALLOWED_COMMANDS: "all"
      ALLOWED_FLAGS: "all"
      MAX_COMMAND_LENGTH: "1024"
      COMMAND_TIMEOUT: "250"
      ALLOW_SHELL_OPERATORS: "true"
    name: CLI MCP Server
    timeout: 300
    type: stdio